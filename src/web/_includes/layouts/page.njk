{% extends 'layouts/default.njk' %}

{% set title = page.title %}

{% block content %}
    <article class="container mx-auto">
        <section class="max-w-3xl mx-auto px-4 md:px-0">
            <div class="content-body pt-4 md:pt-8 fg-base">
                {{ content | safe }}
            </section>
        </section>
    </article>
{% endblock %}

{%- block seo -%}
    <!--Twitter Card-->
    <meta name="twitter:site" content="{{ site.twitter }}">
    <meta name="twitter:creator" content="{{ page.twitter }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="{{ page.url }}">
    <meta name="twitter:title" content="{{ title }} – {{ site.title }}">
    <meta name="twitter:description" content="{{ page.excerpt }}">
    <meta name="twitter:image" content="{{ page.feature_image }}">

    <!--Schema-->
    <link rel="author" href="{{ page.primary_author.website }}">
    <link rel="publisher" href="{{ site.url }}">
    <meta itemprop="name" content="{{ title }} – {{ site.title }}">
    <meta itemprop="description" content="{{ page.excerpt }}">
    <meta itemprop="image" content="{{ page.feature_image }}">

    <!-- Facebook OpenGraph -->
    <meta property="og:url" content="{{ site.url + page.url }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ title }} – {{ site.title }}">
    <meta property="og:image" content="{{ page.feature_image }}">
    <meta property="og:description" content="{{ page.excerpt }}">
    <meta property="og:site_name" content="{{ site.title }}">
    <meta property="og:locale" content="{{ site.lang }}">
    <meta property="article:author" content="{{ site.url }}">
{%- endblock -%}