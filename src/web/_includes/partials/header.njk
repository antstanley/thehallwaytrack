
<header class="w-full h-header">
    {% if page.url !== '/' %}
        <div class="mx-auto container h-full">
            <div class="flex flex-wrap justify-center md:justify-between lg:justify-between xl:justify-between">
                    <div class="align-middle">
                        <a href="/">
                            <div class="logo w-48 h-48 py-4"></div>
                        </a>
                    </div>
                {% include 'partials/navigation.njk' %}
            </div>
        </div>
    {% else %}
        <div class="container mx-auto h-full flex flex-wrap items-center">
            <div class="w-full sm:w-1/3">
                <div class="logo w-72 h-72 p-4 mx-auto"></div>
            </div>
            <div class="w-full sm:w-1/3">
                <div class="max-w-2xl">
                    <h1 class="text-7xl header-font font-bold">Welcome</h1>
                    <div class="mt-4">
                        <p class="my-2 text-xl">{{ site.description }}</p> 
                    </div>
                </div>
            </div>
            <div class="w-full sm:w-1/3">
                <a  href="{{ discord.url }}">
                    <img class="bg-burple pb-2 pt-3 px-4 w-48 mx-auto rounded-2xl shadow-button" src="{{ discord.image }}" alt="Discord logo white" target="_blank"/>
                </a>
            </div>
        </div>
    {% endif %}
</header>
