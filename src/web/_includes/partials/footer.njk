<footer class="w-full relative">
    {% if pages %}
        <div class="container mx-auto text-center absolute">
            <div class="flex justify-center py-4 bottom-0 inset-x-0">
                {% for item in pages %}
                    <a class="px-2" href="{{ item.url }}">
                        {{ item.title }}
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</footer>