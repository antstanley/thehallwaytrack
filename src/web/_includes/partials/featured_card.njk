{% macro feature(event) %}
    <div class="p-2">
        <div class="mx-auto w-96 h-48 rounded-lg m-2 p-2 bg-white fg-feature-card font-card shadow-button">
            <div class="table w-full h-3/5">
                <div class="table-row w-full">
                    <div class="table-cell w-1/3 align-top p-1">
                        <div class="logo-font text-xl">
                            <p>the</p>
                            <p class="font-extrabold">hallway</p>
                            <p>track</p>
                        </div>
                    </div>
                    <div class="table-cell w-2/3">
                        <div class="flex flex-wrap">

                        </div>
                    </div>
                </div>
            </div>
            <div class="table w-full py-2">
                <div class="table-row">
                    <div class="table-cell">
                        <div class="bg-logo-gradient h-2 w-full"></div>
                    </div>
                </div>
                <div class="table-row">
                    <div class="table-cell text-right">
                        <h2 class="text-2xl font-semibold">{{ event.title }}</h2>
                        <p>
                            {{ event.time | getEventDateTime }} 
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

